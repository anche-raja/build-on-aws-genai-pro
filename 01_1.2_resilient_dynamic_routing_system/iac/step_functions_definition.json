{
  "Comment": "AI Assistant with Circuit Breaker Pattern",
  "StartAt": "TryPrimaryModel",
  "States": {
    "TryPrimaryModel": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "${PrimaryModelLambdaArn}",
        "Payload": {
          "prompt.$": "$.prompt",
          "use_case.$": "$.use_case"
        }
      },
      "ResultPath": "$.primary_response",
      "Retry": [
        {
          "ErrorEquals": ["States.TaskFailed"],
          "IntervalSeconds": 1,
          "MaxAttempts": 2,
          "BackoffRate": 2
        }
      ],
      "Catch": [
        {
          "ErrorEquals": ["States.ALL"],
          "ResultPath": "$.error-info",
          "Next": "TryFallbackModel"
        }
      ],
      "Next": "EvaluatePrimaryResponse"
    },
    "EvaluatePrimaryResponse": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.primary_response.Payload.statusCode",
          "NumericGreaterThanEquals": 400,
          "Next": "TryFallbackModel"
        },
        {
          "Variable": "$.primary_response.Payload.statusCode",
          "IsPresent": false,
          "Next": "TryFallbackModel"
        }
      ],
      "Default": "SuccessState"
    },
    "TryFallbackModel": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "${FallbackModelLambdaArn}",
        "Payload": {
          "prompt.$": "$.prompt",
          "use_case.$": "$.use_case",
          "is_fallback": true
        }
      },
      "ResultPath": "$.fallback_response",
      "Retry": [
        {
          "ErrorEquals": ["States.TaskFailed"],
          "IntervalSeconds": 1,
          "MaxAttempts": 2,
          "BackoffRate": 2
        }
      ],
      "Catch": [
        {
          "ErrorEquals": ["States.ALL"],
          "ResultPath": "$.fallback_error",
          "Next": "GracefulDegradation"
        }
      ],
      "Next": "EvaluateFallbackResponse"
    },
    "EvaluateFallbackResponse": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.fallback_response.Payload.statusCode",
          "NumericGreaterThanEquals": 400,
          "Next": "GracefulDegradation"
        },
        {
          "Variable": "$.fallback_response.Payload.statusCode",
          "IsPresent": false,
          "Next": "GracefulDegradation"
        }
      ],
      "Default": "SuccessState"
    },
    "GracefulDegradation": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "${DegradationLambdaArn}",
        "Payload": {
          "prompt.$": "$.prompt",
          "use_case.$": "$.use_case"
        }
      },
      "Next": "SuccessState"
    },
    "SuccessState": {
      "Type": "Succeed"
    }
  }
}

