# AWS Configuration
aws_region  = "us-east-1"
environment = "dev"

# Project Configuration
project_name = "rag-vector-search"

# S3 Configuration
document_bucket_name = "my-rag-documents-bucket-unique-name"

# DynamoDB Configuration
metadata_table_name = "DocumentMetadata"

# OpenSearch Configuration
opensearch_instance_type  = "r6g.large.search"
opensearch_instance_count = 3
opensearch_ebs_volume_size = 100

# Bedrock Configuration
embedding_model_id    = "amazon.titan-embed-text-v1"
foundation_model_id   = "anthropic.claude-3-sonnet-20240229-v1:0"

# Lambda Configuration
lambda_memory_size = 1024
lambda_timeout     = 300

# Sync Configuration
max_age_days               = 30
sync_schedule_expression   = "rate(1 day)"

# VPC Configuration (optional - leave empty for public access)
vpc_id     = ""
subnet_ids = []

